@section scripts{

    <script type="text/javascript">
        $(function () {
            $.getJSON("/projekti/getlist", null, function (json) {
                var projektit = JSON.parse(json);
                //alert("asiakkaiden lkm: " + projektit.length);

                var html = "";
                for (var index = 0; index < projektit.length; index++) {
                    html += "<tr>" +
                        "<td><a href='#'><span class='glyphicon glyphicon-pencil'></span></a></td>" +
                        "<td>" + projektit[index].ProjektiID + "</td>" +
                        "<td>" + projektit[index].Projektinimi + "</td>" +
                        "<td><a href='#'><span class='glyphicon glyphicon-trash'></span></a></td>" +
                        "</tr>\r\n";

                    $("#projektiList tbody").html(html);

                    



</script>
}

<h2>Projektit</h2>
<button class="btn btn-primary" id="addNewProjektiButton">Lisää uusi</button>

<table class="table table-striped" id="projektiList">
    <thead>
        <tr>
            <th></th>
            <th>Projekti-id</th>
            <th>Projektinimi</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div class="modal fade" tabindex="-1" role="dialog" id="projektiModalDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><span id="projektiModalTitle">Muokkaa projektia</span></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">Projekti-id</div>
                    <div class="col-md-6"><input class="form-control" id="projektiModal_CustId" type="text" readonly></div>
                </div>
                <div class="row">
                    <div class="col-md-3">Projektinimi</div>
                    <div class="col-md-6"><input class="form-control" id="customerModal_Projektinimi" type="text"></div>
                </div>               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Sulje</button>
                <button type="button" class="btn btn-primary" id="projektiModalSaveButton">Tallenna</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
